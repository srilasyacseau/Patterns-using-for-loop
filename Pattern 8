#include <stdio.h>
int main()
{
    int i,j,x;
    
    printf("\tEnter the value of 'x': ");
    scanf("%d",&x);
    
    printf("\n");
    
    for(i = 1; i <= x; i++)
    {
        for(j = x; j >= i; j--)
        {
            printf("\t%d",i);
        }
        
        printf("\n");
    }
    
    return 0;
}
